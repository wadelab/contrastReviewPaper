	journal = {NeuroImage},
	keywords = {Humans, Photic Stimulation, Vision, Binocular, Adult, Evoked Potentials, Visual, Magnetic Resonance Imaging, Male, V1, Female, Young Adult, Electroencephalography, fMRI, SSVEP, Amblyopia, Dichoptic, Interocular suppression},
	language = {eng},
