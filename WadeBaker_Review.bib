	number = {6},
	pages = {e2216192120},
	title = {Distinct early and late neural mechanisms regulate feature-specific sensory adaptation in the human visual system},
	url = {https://www.pnas.org/doi/10.1073/pnas.2216192120},
	urldate = {2023-09-25},
	volume = {120},
	year = {2023},
	bdsk-url-1 = {https://www.pnas.org/doi/10.1073/pnas.2216192120},
